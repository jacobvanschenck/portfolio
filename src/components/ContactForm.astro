---
import Input from './Input.astro';
---

<form
    class="flex flex-col gap-10 items-center p-5 w-96 rounded-md shadow-2xl dark:bg-gray-700 aspect-square"
    hx-post="/api/send"
>
    <h3 class="w-full text-xl text-center">Message Me</h3>
    <Input label="email" type="email" />
    <Input label="message" type="text" />
    <button
        class="py-1 px-3 text-center rounded-lg border-2 border-black transition duration-150 dark:bg-amber-500 dark:border-none hover:scale-110 w-fit"
    >
        Send
    </button>
</form>
