---
import Input from './Input.astro';
---

<form class="flex flex-col gap-8" hx-post="/api/send">
    <Input label="Name" type="text" />
    <Input label="Email" type="email" />
    <Input label="Message" type="text" />
    <button
        type="submit"
        class="w-full h-10 text-center rounded-lg border-2 border-black transition duration-150 dark:bg-amber-500 dark:border-none hover:scale-95"
    >
        Send
    </button>
</form>
