---
export interface Props {
    imgSrc: string;
    techList: Array<string>;
    projectTitle: string;
    siteLink: string;
    description: string;
    githubLink: string;
}

const {
    imgSrc,
    techList,
    projectTitle,
    siteLink,
    description,
    githubLink,
    ...props
} = Astro.props;
---

<div
    class="flex flex-col-reverse gap-6 p-8 rounded-lg transition-all duration-150 ease-in-out sm:gap-8 md:flex-row group/card dark:hover:bg-slate-700/50 hover:bg-slate-300/50"
>
    <img
        src={imgSrc}
        class="object-cover object-top w-80 rounded-lg border-2 transition-all duration-150 ease-in-out border-slate-700 aspect-video dark:group-hover/card:border-amber-500/50 group-hover/card:scale-95 group-hover:border-violet-600/50"
        alt={'Screen shot of ' + projectTitle}
    />
    <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-2">
            <h3
                class="text-2xl font-bold transition-all duration-150 ease-in-out text-slate-700 dark:text-slate-200 dark:group-hover/card:text-amber-500 group-hover/card:text-violet-600"
            >
                {projectTitle}
            </h3>
            <div class="flex gap-4 items-center">
                <a
                    target="_blank"
                    href={siteLink}
                    class="flex gap-1 items-center transition-all duration-150 hover:text-violet-600 group group/github dark:hover:text-amber-500"
                    >View Site
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        class="w-5 h-5 transition-all duration-150 ease-in-out group-hover:translate-x-1 group-hover:-translate-y-1 group-hover:stroke-violet-500 group-hover:dark:stroke-amber-500"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
                    </svg>
                </a>
                <a
                    class="flex gap-2 items-center transition-all duration-150 hover:text-violet-600 group group/github dark:hover:text-amber-500"
                    href={githubLink}
                    target="_blank"
                >
                    View Source<svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="w-5 h-5 transition-all duration-150 ease-in-out group-hover:translate-x-1 group-hover:-translate-y-1 group-hover:fill-violet-500 group-hover:dark:fill-amber-500"
                        ><path
                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                        ></path></svg
                    >
                </a>
            </div>
        </div>
        <p class="text-slate-500 dark:text-slate-400">{description}</p>
        <ul class="flex flex-wrap gap-2 sm:gap-4">
            {
                techList.map((tech: string) => {
                    return (
                        <li class="py-1 px-3 text-xs text-violet-800 rounded-3xl transition-all duration-150 ease-in-out sm:text-sm bg-violet-300/30 dark:group-hover/card:bg-amber-800/60 dark:bg-amber-800/30 dark:text-amber-100/80 dark:group-hover/card:text-amber-100 group-hover/card:bg-violet-300/60">
                            {tech}
                        </li>
                    );
                })
            }
        </ul>
    </div>
</div>
<a href={siteLink} target="_blank" {...props} class=""></a>
